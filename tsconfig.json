{
    "compilerOptions": {
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "lib": ["es6"],
        "jsx": "react",
        "module": "commonjs",
        "moduleResolution": "node",
        "noEmit": true,
        "noEmitOnError": false,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "pretty": true,
        "sourceMap": true,
        "strict": true,
        "target": "es2019"
    }
}
